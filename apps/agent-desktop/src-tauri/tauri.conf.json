{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ursly Agent",
  "version": "1.0.0",
  "identifier": "io.ursly.agent",
  "build": {
    "beforeDevCommand": "npx nx serve web",
    "devUrl": "http://localhost:4200",
    "beforeBuildCommand": "npx nx build web",
    "frontendDist": "../../../dist/apps/web"
  },
  "app": {
    "windows": [
      {
        "title": "Ursly Agent",
        "label": "main",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "zoomHotkeysEnabled": true,
        "url": "index.html",
        "devtools": true,
        "visible": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: asset: http://localhost:* https://app.ursly.io https://api.ursly.io https://auth.ursly.io https://*.ursly.io; connect-src 'self' tauri: http://localhost:* ws://localhost:* https://app.ursly.io https://api.ursly.io https://auth.ursly.io wss://*.ursly.io; script-src 'self' 'unsafe-inline' 'unsafe-eval' tauri: http://localhost:* https://*.ursly.io; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com http://localhost:*; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https: blob: tauri: asset:; frame-src 'self' http://localhost:* https://auth.ursly.io"
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "GPU Metrics & AI Agent Monitor",
    "longDescription": "Ursly Agent - GPU metrics monitoring and AI agent management for local LLMs",
    "copyright": "2024 Ursly.io",
    "publisher": "Ursly.io",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "exceptionDomain": null
    },
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "installMode": "currentUser"
      }
    }
  }
}
