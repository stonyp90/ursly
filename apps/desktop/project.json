{
  "name": "desktop",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/desktop/src",
  "projectType": "application",
  "tags": ["scope:desktop", "type:app"],
  "implicitDependencies": ["web"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd apps/desktop && npx vite --port 1420",
          "sleep 5 && cd apps/desktop/src-tauri && cargo run --no-default-features"
        ],
        "parallel": true,
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": []
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx serve web --port 1420",
          "sleep 8 && . $HOME/.cargo/env && tauri dev --no-dev-server"
        ],
        "parallel": true,
        "cwd": "apps/desktop"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/src-tauri/target/release/bundle"],
      "options": {
        "command": ". $HOME/.cargo/env && tauri build",
        "cwd": "apps/desktop"
      }
    },
    "build:debug": {
      "executor": "nx:run-commands",
      "dependsOn": ["web:build"],
      "options": {
        "command": ". $HOME/.cargo/env && tauri build --debug",
        "cwd": "apps/desktop"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/desktop/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "cargo:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo check",
        "cwd": "apps/desktop/src-tauri"
      }
    },
    "cargo:clippy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy",
        "cwd": "apps/desktop/src-tauri"
      }
    }
  }
}
