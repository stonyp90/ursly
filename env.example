# ====================
# Keycloak Configuration
# ====================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=agent-orchestrator
KEYCLOAK_CLIENT_ID=agent-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# ====================
# MongoDB Configuration
# ====================
MONGODB_URI=mongodb://admin:your-mongo-password@localhost:27017/agent-orchestrator?authSource=admin

# ====================
# Ollama Configuration
# ====================
OLLAMA_URL=http://localhost:11434
# Optional: External Ollama instance (e.g., GPU-enabled server)
# OLLAMA_EXTERNAL_URL=http://gpu-server:11434

# ====================
# Agent Token Configuration
# ====================
AGENT_TOKEN_SECRET=your-secret-key-minimum-32-characters-long
AGENT_TOKEN_EXPIRY=300

# ====================
# gRPC Configuration
# ====================
GRPC_SERVICE_URL=localhost:50051
GRPC_PORT=50051

# ====================
# API Configuration
# ====================
PORT=3000
NODE_ENV=development
# Comma-separated list of allowed origins (web, Tauri desktop, production)
CORS_ORIGIN=http://localhost:4200,http://localhost:1420,http://localhost:3000,tauri://localhost,http://tauri.localhost,https://app.ursly.io,https://api.ursly.io

# ====================
# Frontend Configuration
# ====================
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=agent-orchestrator
VITE_KEYCLOAK_CLIENT_ID=agent-web

# ====================
# Novu Notification Configuration (optional)
# ====================
VITE_NOVU_APPLICATION_IDENTIFIER=your-novu-app-id
NOVU_API_KEY=your-novu-api-key

# ====================
# SMTP Configuration (for production)
# ====================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_FROM=noreply@ursly.io
SMTP_REPLY_TO=support@ursly.io
SMTP_SSL=false
SMTP_STARTTLS=true
SMTP_AUTH=true
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
